{
  "name": "sitehot",
  "version": "1.0.0",
  "description": "Projeto unificado: Telegram bot + Web backend com token de acesso",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm rebuild sharp --platform=linux --arch=x64 || echo 'Sharp rebuild failed, continuing...' && npm rebuild better-sqlite3 --platform=linux --arch=x64 || echo 'SQLite rebuild failed, continuing...' && npm rebuild pg --platform=linux --arch=x64 || echo 'PostgreSQL rebuild failed, continuing...'",
    "test": "node test-database.js",
    "test:db": "node postgres.js",
    "health": "node -e \"require('./postgres.js').healthCheck().then(console.log)\"",
    "backup": "node -e \"require('./postgres.js').createBackup().then(console.log)\""
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "dotenv": "^16.0.3",
    "node-telegram-bot-api": "^0.61.0",
    "axios": "^1.4.0",
    "better-sqlite3": "^8.14.0",
    "uuid": "^9.0.0",
    "sharp": "^0.32.1",
    "pg": "^8.11.0",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "optionalDependencies": {
    "sharp": "^0.32.1"
  },
  "keywords": [
    "telegram",
    "bot",
    "web",
    "backend",
    "tokens",
    "postgresql",
    "express",
    "payments"
  ],
  "author": "SiteHot",
  "license": "ISC"
}